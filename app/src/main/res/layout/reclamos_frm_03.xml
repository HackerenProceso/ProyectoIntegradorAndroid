<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="32dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners_background"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:padding="1dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgLibro"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/libro"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tituloR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIBRO DE RECLAMOS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@id/imgLibro"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginVertical="40dp"
            android:background="@drawable/shadow_producto"
            android:padding="1dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="22dp"
                android:layout_height="wrap_content"
                android:text="Reclamo: "
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingBottom="11dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="37dp"
                android:layout_marginHorizontal="22dp"
                android:layout_height="wrap_content"
                android:text=" Disconformidad relacionada a los productos oservicios "
                android:textSize="13sp"
                android:textColor="@color/plomo_text"
                android:paddingBottom="11dp" />

            <TextView
                android:id="@+id/txtReclamo9"
                android:layout_width="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginHorizontal="22dp"
                android:layout_height="wrap_content"
                android:text="Reclamo: "
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingBottom="11dp" />
            <TextView
                android:id="@+id/txtReclamo10"
                android:layout_width="match_parent"
                android:layout_marginTop="90dp"
                android:layout_marginHorizontal="22dp"
                android:layout_height="wrap_content"
                android:text=" Disconformidad no relacionada a los productos oservicios; o, malestar o descontento respecto a la atención al público. "
                android:textSize="13sp"
                android:textColor="@color/plomo_text"
                android:paddingBottom="11dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="150dp"
                android:layout_marginHorizontal="22dp"
                android:layout_height="wrap_content"
                android:text="*El proveedor debe dar respuesta al reclamo o queja en un plazo no mayor de quince (15) días hábiles, el cual es improrrogable.


                *En caso no consigne como mínimo su nombre, DNI, domicilio o correo electrónico, reclamo o queja y el detalle del mismo, den conformidad con el artículo 5 del Reglamento del Libro de Reclamaciones, su reclamo o queja se considera como nopresentado. "
                android:textSize="13sp"
                android:textColor="@color/plomo_text"
                android:paddingBottom="11dp" />

        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinuar03"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="160dp"
            android:backgroundTint="@color/black"
            android:text="Continuar"
            app:cornerRadius="10dp" />

    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentNav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>