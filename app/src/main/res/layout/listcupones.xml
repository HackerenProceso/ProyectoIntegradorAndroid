<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Container for the Select All Option -->
    <!-- Asegurar que se mantenga fijo en la parte superior -->
    <LinearLayout
        android:id="@+id/selectAllContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/selectAllCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar todo"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- ScrollView to hold the list items -->
    <!-- Modificación: Asegurar que el ScrollView empiece después del contenedor de seleccionar todo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/selectAllContainer"
        app:layout_constraintBottom_toTopOf="@id/deleteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <!-- List Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corners_background"
            android:padding="16dp">

            <!-- List Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <CheckBox
                    android:id="@+id/itemCheckBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <!-- ImageView with white background -->
                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:src="@drawable/inca"
                        android:background="@drawable/shadow_producto"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/iconImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/nuevo"
                        android:layout_marginBottom="40dp"
                        android:layout_marginEnd="30dp"/>

                    <!-- TextView for "1x" -->
                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1x"
                        android:textSize="18sp"
                        android:layout_gravity="bottom|end"
                        android:padding="4dp"
                        android:textColor="@android:color/black" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inca kola"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="11dp" />

                    <TextView
                        android:id="@+id/productDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inca Kola personal"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$12"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="end" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66A1A1A1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <CheckBox
                    android:id="@+id/itemCheckBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <!-- ImageView with white background -->
                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:src="@drawable/inca"
                        android:background="@drawable/shadow_producto"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/iconImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/nuevo"
                        android:layout_marginBottom="40dp"
                        android:layout_marginEnd="30dp"/>

                    <!-- TextView for "1x" -->
                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="1x"
                        android:layout_gravity="bottom|end"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inca kola"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="11dp" />

                    <TextView
                        android:id="@+id/productDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inca Kola personal"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$12"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="end" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66A1A1A1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <CheckBox
                    android:id="@+id/itemCheckBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <!-- ImageView with white background -->
                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:src="@drawable/inca"
                        android:background="@drawable/shadow_producto"
                        android:scaleType="centerCrop"/>

                    <!-- TextView for "1x" -->
                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1x"
                        android:textSize="18sp"
                        android:layout_gravity="bottom|end"
                        android:padding="4dp"
                        android:textColor="@android:color/black" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inca kola"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="11dp" />

                    <TextView
                        android:id="@+id/productDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inca Kola personal"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$12"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="end" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66A1A1A1" />


            <!-- Repetir bloques similares para cada ítem de la lista -->
            <!-- Asegúrate de cambiar las IDs de los CheckBox para cada ítem -->
            <!-- List Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <CheckBox
                    android:id="@+id/itemCheckBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <!-- ImageView with white background -->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:src="@drawable/inca"
                        android:background="@drawable/shadow_producto"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/iconImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/nuevo"
                        android:layout_marginBottom="40dp"
                        android:layout_marginEnd="30dp"/>
                    <!-- TextView for "1x" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1x"
                        android:textSize="18sp"
                        android:layout_gravity="bottom|end"
                        android:padding="4dp"
                        android:textColor="@android:color/black" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inca kola"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="11dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inca Kola personal"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$12"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="end" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66A1A1A1" />

            <!-- Añadir más ítems aquí según sea necesario -->

        </LinearLayout>
    </ScrollView>

    <!-- Delete Button -->
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>