<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="32dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners_background"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FE0080"
            android:padding="1dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">


            <ImageView
                android:id="@+id/imglibro"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/libro"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <TextView
                android:id="@+id/tituloR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIBRO DE RECLAMOS"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/imglibro"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:text="Estimado cliente."
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:paddingBottom="11dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:text="Conforme a lo establecido en el Reglamento del Libro de reclamaciones del Código de Protección y Defensa del consumidor ponemos a tu disposición nuestro Libro de reclamaciones Virtual."
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:paddingBottom="11dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A través de nuestro Libro de Reclamaciones Virtual podráspresentar un reclamo o queja respecto a tu disconformidad por un producto o servicio ofrecido por "
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:paddingBottom="11dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Te informamos que los datos que ingreses al momento de presentar tu reclamo o queja, a través de nuestro Libro de reclamaciones Virtual, serán tratados conforme nuestraPolíticas de Datos Personales, con la finalidad de gestionary dar respuesta al mismo, dentro del plazo legal."
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:paddingBottom="11dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accede a nuestro Libro de Reclamaciones Virtual dandoclic al botón 'Continuas'"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:paddingBottom="11dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinuar01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:paddingHorizontal="52dp"
            android:paddingVertical="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            android:layout_margin="16dp"/>

    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentNav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>