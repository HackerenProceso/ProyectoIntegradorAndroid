<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notificacion.NotificacionActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNotification1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNotificationTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificación 1"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvNotificationBody1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevas ofertas. ¿Que esperas? ¡ ya"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/btnAction1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrar"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNotification2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewNotification1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNotificationTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificación 2"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvNotificationBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevos productos ingresado que te pueden interesar"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>


            <Button
                android:id="@+id/btnAction2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrar"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNotification3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewNotification2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNotificationTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificación 3"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvNotificationBody3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quieres particpar en este premio grandioso. No esperes mas y registrate"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>


            <Button
                android:id="@+id/btnAction2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrar"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentNav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>